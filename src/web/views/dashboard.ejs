<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Session Scheduler - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-orange-50">
    <nav class="bg-gradient-to-r from-orange-500 to-orange-600 text-white p-4 shadow-lg">
        <div class="container mx-auto flex justify-between items-center">
            <div>
                <h1 class="text-xl font-bold">üçä Session Scheduler</h1>
                <a href="https://github.com/your-username/clementime" target="_blank" class="text-xs text-orange-100 hover:text-white transition-colors duration-200 flex items-center mt-1">
                    üß° Powered by clementime
                </a>
            </div>
            <div class="space-x-4">
                <a href="/" class="hover:text-orange-200 font-semibold transition-colors duration-200">Dashboard</a>
                <a href="/schedules" class="hover:text-orange-200 transition-colors duration-200">Schedules</a>
                <a href="/config" class="hover:text-orange-200 transition-colors duration-200">Config</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto p-6">
        <!-- Course Info -->
        <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4">üìñ Course Information</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div>
                    <span class="text-gray-600">Course:</span>
                    <p class="font-semibold"><%= config.course.name %></p>
                </div>
                <div>
                    <span class="text-gray-600">Term:</span>
                    <p class="font-semibold"><%= config.course.term %></p>
                </div>
                <div>
                    <span class="text-gray-600">Total Participants:</span>
                    <p class="font-semibold"><%= config.course.total_students %></p>
                </div>
                <div>
                    <span class="text-gray-600">Sections:</span>
                    <p class="font-semibold"><%= config.sections.length %></p>
                </div>
            </div>
        </div>

        <!-- Stats Dashboard -->
        <% if (schedules) { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6">
                <div class="flex items-center">
                    <div class="text-3xl mr-4">üìÖ</div>
                    <div>
                        <p class="text-gray-600">Total Sessions</p>
                        <p class="text-2xl font-bold"><%= stats.totalSlots %></p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6">
                <div class="flex items-center">
                    <div class="text-3xl mr-4">üë•</div>
                    <div>
                        <p class="text-gray-600">Participants</p>
                        <p class="text-2xl font-bold"><%= stats.totalStudents %></p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6">
                <div class="flex items-center">
                    <div class="text-3xl mr-4">üîó</div>
                    <div>
                        <p class="text-gray-600">Meet Coverage</p>
                        <p class="text-2xl font-bold"><%= stats.zoomCoverage %>%</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6">
                <div class="flex items-center">
                    <div class="text-3xl mr-4">üé•</div>
                    <div>
                        <p class="text-gray-600">Recordings</p>
                        <p class="text-2xl font-bold"><%= stats.recordingCoverage %>%</p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6 mb-6" x-data="{
            loading: false,
            message: '',
            startDate: new Date().toISOString().split('T')[0],
            weeks: 4
        }">
            <h2 class="text-2xl font-bold mb-4">üöÄ Quick Actions</h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Generate Schedule -->
                <div class="border rounded-lg p-4">
                    <h3 class="text-lg font-semibold mb-3">üìä Generate Schedules</h3>
                    <div class="space-y-3">
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Start Date</label>
                            <input type="date" x-model="startDate" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Number of Weeks</label>
                            <input type="number" x-model="weeks" min="1" max="12" class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2">
                        </div>
                        <button
                            @click="generateSchedules()"
                            :disabled="loading"
                            class="w-full bg-orange-500 text-white py-2 px-4 rounded-md hover:bg-orange-600 disabled:opacity-50 transition-colors duration-200">
                            <span x-show="!loading">Generate Schedules</span>
                            <span x-show="loading">Generating...</span>
                        </button>
                    </div>
                </div>

                <!-- Run Full Workflow -->
                <div class="border rounded-lg p-4">
                    <h3 class="text-lg font-semibold mb-3">‚ö° Run Full Workflow</h3>
                    <p class="text-sm text-gray-600 mb-3">Generate schedules, create Google Meet sessions, and send notifications</p>
                    <div class="space-y-3">
                        <label class="flex items-center">
                            <input type="checkbox" x-model="dryRun" class="mr-2">
                            <span class="text-sm">Dry run (preview only)</span>
                        </label>
                        <button
                            @click="runWorkflow()"
                            :disabled="loading"
                            class="w-full bg-orange-600 text-white py-2 px-4 rounded-md hover:bg-orange-700 disabled:opacity-50 transition-colors duration-200">
                            <span x-show="!loading">Run Full Workflow</span>
                            <span x-show="loading">Running...</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Messages -->
            <div x-show="message" class="mt-4 p-3 bg-orange-50 border border-orange-300 rounded-md">
                <p x-text="message" class="text-orange-800"></p>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow-lg border border-orange-100 p-6">
            <h2 class="text-2xl font-bold mb-4">üìã System Status</h2>
            <div class="space-y-3">
                <div class="flex items-center justify-between">
                    <span>Configuration File</span>
                    <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-sm">‚úÖ Valid</span>
                </div>
                <div class="flex items-center justify-between">
                    <span>Environment Variables</span>
                    <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm">‚ö†Ô∏è Check Required</span>
                </div>
                <div class="flex items-center justify-between">
                    <span>Google Drive Authentication</span>
                    <a href="/auth/google" class="px-2 py-1 bg-orange-100 text-orange-800 rounded-full text-sm hover:bg-orange-200 transition-colors duration-200">üîó Authenticate</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function generateSchedules() {
            this.loading = true;
            this.message = '';

            fetch('/schedules/generate', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    startDate: this.startDate,
                    weeks: parseInt(this.weeks)
                })
            })
            .then(response => response.json())
            .then(data => {
                this.loading = false;
                if (data.success) {
                    this.message = 'Schedules generated successfully!';
                    setTimeout(() => window.location.reload(), 2000);
                } else {
                    this.message = 'Error: ' + data.error;
                }
            })
            .catch(error => {
                this.loading = false;
                this.message = 'Error: ' + error.message;
            });
        }

        function runWorkflow() {
            this.loading = true;
            this.message = '';

            fetch('/schedules/run-workflow', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    startDate: this.startDate,
                    weeks: parseInt(this.weeks),
                    dryRun: this.dryRun
                })
            })
            .then(response => response.json())
            .then(data => {
                this.loading = false;
                if (data.success) {
                    this.message = 'Workflow completed successfully!';
                    setTimeout(() => window.location.reload(), 2000);
                } else {
                    this.message = 'Error: ' + data.error;
                }
            })
            .catch(error => {
                this.loading = false;
                this.message = 'Error: ' + error.message;
            });
        }
    </script>
</body>
</html>